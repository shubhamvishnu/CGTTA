<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.cgtta.cgtta.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_article"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:id="@+id/article_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:text="title"/>

            <TextView
                android:id="@+id/article_view_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:gravity="right"
                android:padding="6dp"
                android:text="by"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
            android:id="@+id/article_view_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/article_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:text="content"/>
        <TextView
            android:id="@+id/article_view_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/team_background"
            android:textColor="@color/white"
            android:padding="6dp"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:text="source"/>

        <TextView
            android:id="@+id/article_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/time_background"
            android:textColor="@color/white"
            android:text="date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:text="        "/>

            </LinearLayout>
            </LinearLayout>

    </ScrollView>

</LinearLayout>
